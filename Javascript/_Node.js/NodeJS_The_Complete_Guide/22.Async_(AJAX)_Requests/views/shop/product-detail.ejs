<%- include('../includes/head.ejs') %>
<link rel="stylesheet"
      href="/css/main.css">
<link rel="stylesheet"
      href="/css/product.css">
</head>


<%- include('../includes/header.ejs') %>

<main class="centered">
      <h1>
            <%= product.title %>
      </h1>
      <hr>
      <div >
            <img src="/<%= product.imageUrl %>"
                 alt="<%= product.title %>"
                 class="product__detail">
      </div>
      <h2>
            <%= product.price %>
      </h2>
      <p>
            <%= product.description %>
      </p>
      <%- include('../includes/add-to-cart.ejs', {product: product}) %>
</main>
<%- include('../includes/footer.ejs') %>
