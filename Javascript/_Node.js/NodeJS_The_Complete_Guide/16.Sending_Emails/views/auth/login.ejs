<%- include('../includes/head.ejs') %>
<link rel="stylesheet"
      href="/css/main.css">
<link rel="stylesheet"
      href="/css/forms.css">
<link rel="stylesheet"
      href="/css/auth.css">
</head>

<%- include('../includes/header.ejs') %>

<main>

  <form class="login-form"
        action="/login"
        method="POST">
    <div class="form-control">
      <label for="email">E-Mail</label>
      <input type="email"
             name="email"
             id="email">
    </div>
    <% if(errorMessageNoSuchUser) { %>
    <div class="user-message user-message--error">
      <%= errorMessageNoSuchUser %>
    </div>
    <% } %>

    <div class="form-control">
      <label for="password">Pasword</label>
      <input type="password"
             name="password"
             id="password">
    </div>
    <% if(errorMessagePassword) { %>
    <div class="user-message user-message--error">
      <%= errorMessagePassword %>
    </div>
    <% } %>
    <input type="hidden"
           name="_csrf"
           value="<%= csrfToken %>">

    <button type="submit"
            class="btn">Login</button>

  </form>

</main>
<%- include('../includes/footer.ejs') %>
