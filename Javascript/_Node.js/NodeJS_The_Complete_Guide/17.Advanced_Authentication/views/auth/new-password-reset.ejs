<%- include('../includes/head.ejs') %>
<link rel="stylesheet"
      href="/css/main.css">
<link rel="stylesheet"
      href="/css/forms.css">
<link rel="stylesheet"
      href="/css/auth.css">
</head>

<%- include('../includes/header.ejs') %>

<main>

  <form class="login-form"
        action="/new-password-reset"
        method="POST">

    <div class="form-control">
      <label for="password">Pasword</label>
      <input type="password"
             name="password"
             id="password">
    </div>
    <input type="hidden"
    name="passwordToken"
    value="<%= passwordToken %>">
    <input type="hidden"
           name="userId"
           value="<%= userId %>">
    <input type="hidden"
           name="_csrf"
           value="<%= csrfToken %>">
    <button type="submit"
            class="btn">Save new password</button>

  </form>

</main>
