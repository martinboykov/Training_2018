<%- include('../includes/head.ejs') %>

</head>

<%- include('../includes/header.ejs') %>

<% if(products.length > 0) { %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Quantity</th>
      <th>Price (each)</th>
      <th>Price (total)</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% for(let product of products) { %>
    <tr>
      <td>
        <%= product.title %>
      </td>
      <td>
        <%= product.qty %>
      </td>
      <td>
        <%= product.price %>
      </td>
      <td>
        <%=product.price * product.qty %>
      </td>
      <td>
        <form class="product-form"
              action="/cart/delete-product/<%= product.prodId %>"
              method="POST">
          <button type="submit"
                  class="btn">Delete</button>
        </form>
      </td>
    </tr>

    <% } %>
  </tbody>
  <tfoot>
    <tr class="total-price">
      <td class="total-price"></td>
      <td class="total-price"></td>
      <td class="total-price right">
        Total Price:
      </td>
      <td class="total-price left">
        <%= totalPrice %>
      </td>
      <td class="total-price ">
        <form class="product-form"
              action="/create-order"
              method="POST">
          <button type="submit"
                  class="btn">Order Now!</button>
        </form>
      </td>
    </tr>
  </tfoot>
</table>

<% } else { %>
<h1>The Cart is empty!</h1>
<% } %>
<%- include('../includes/footer.ejs') %>
